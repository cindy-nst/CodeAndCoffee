<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e7d9d1"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#855748"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_user"
        android:layout_width="411dp"
        android:layout_height="181dp"
        android:background="@android:color/white"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="114dp">

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="121dp"
            android:layout_height="101dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.255"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_circle_acc_user" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="8dp"
            android:text="Username"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/img_user"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.344" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="8dp"
            android:text="Email"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/img_user"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.134" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shp_circle_acc"
            app:srcCompat="@drawable/ic_edit_account"
            tools:layout_editor_absoluteX="149dp"
            tools:layout_editor_absoluteY="40dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/cl_user"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="435dp"
        android:background="#e7d9d1"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="296dp">


        <RelativeLayout
            android:id="@+id/ll_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_order"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:text="Order"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_next"
                android:layout_width="33dp"
                android:layout_height="25dp"
                android:layout_marginStart="219dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/tv_order"
                app:srcCompat="@drawable/ic_arrow_chat_admin_24dp" />

            <RelativeLayout
                android:id="@+id/ll_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_order"
                android:layout_marginTop="65dp"
                tools:ignore="NotSibling"> <!-- Added margin top -->

                <TextView
                    android:id="@+id/tv_setting"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="0dp"
                    android:text="Setting"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_setting_next"
                    android:layout_width="33dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="219dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@id/tv_setting"
                    app:srcCompat="@drawable/ic_arrow_chat_admin_24dp" />

                <RelativeLayout
                    android:id="@+id/ll_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="45dp"
                    tools:ignore="NotSibling"> <!-- Added margin top -->

                    <TextView
                        android:id="@+id/tv_feedback"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="0dp"
                        android:text="Feedback"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/img_feedback_next"
                        android:layout_width="33dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="219dp"
                        android:layout_marginTop="0dp"
                        android:layout_toEndOf="@id/tv_feedback"
                        app:srcCompat="@drawable/ic_arrow_chat_admin_24dp" />

                    <RelativeLayout
                        android:id="@+id/ll_termsandcond"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_feedback"
                        android:layout_marginTop="45dp">

                        <TextView
                            android:id="@+id/tv_termsandcond"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="0dp"
                            android:text="Terms and Conditions"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/img_termsandcond_next"
                            android:layout_width="33dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="140dp"
                            android:layout_marginTop="0dp"
                            android:layout_toEndOf="@id/tv_termsandcond"
                            app:srcCompat="@drawable/ic_arrow_chat_admin_24dp" />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>